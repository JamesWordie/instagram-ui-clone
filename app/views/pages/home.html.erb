<div class="container" style="max-width: 1000px !important">
  <div class="row">
    <div class="col-md-8">
      <div class="d-flex flex-row my-4 bg-white rounded-lg" style="overflow-x: scroll;">
        <% 20.times do %>
          <div class="d-flex flex-column align-items-center px-2 my-3">
            <% user = @users.sample %>
            <%= cl_image_tag user.avatar.key, width: 56, height: 56, crop: :thumb, gravity: :face, class:"avatar-large text-center" %>
            <p class="mb-0" style="font-size:12px;"><%= user.username %></p>
          </div>
        <% end %>
      </div>
      <%# 20.times do %>
        <div class="d-flex flex-column bg-white">
          <div class="d-flex w-100">
            <div class="row align-items-center flex-fill p-2">
              <div class="col-1 text-center">
                <%= cl_image_tag @james.avatar.key, width: 40, height: 40, crop: :thumb, gravity: :face, class:"avatar" %>
              </div>
              <div class="col-9 text-left">
                <div class="">
                  <p class="mb-0" style="font-size:14px;"><%= @james.username %></p>
                  <p class="text-muted mb-0" style="font-size:14px;"><%= @james.firstname %>  <%= @james.lastname %></p>
                </div>
              </div>
              <div class="col-2 text-center">
                <i class="fas fa-ellipsis-h"></i>
              </div>
            </div>
          </div>
          <div>
            <img src="https://source.unsplash.com/random/600x400" class="w-100" alt="">
          </div>
          <div class="d-flex flex-column">
            <div class="d-flex flex-row justify-content-between align-items-center p-2">
              <div class="d-flex">
                <span>
                  <i style="font-size: 24px;" class="far fa-paper-plane text-muted px-2"></i>
                  <i style="font-size: 24px;" class="far fa-comment text-muted px-2"></i>
                  <i style="font-size: 24px;" class="far fa-heart text-muted px-2"></i>
                </span>
              </div>
              <i style="font-size: 24px;" class="far fa-bookmark text-muted px-2"></i>
            </div>
            <p class="mb-0 ml-3" style="font-size: 16px;"><%= rand(1..10000) %> likes</p>
            <span class="w-90 d-inline-flex">
              <p class="mb-0 ml-3" style="font-size: 16px; font-weight: 600;"><%= @james.username %></p>
              <p class="mb-0 ml-3" style="font-size: 16px; overflow-x: hidden;
                                          white-space: nowrap; text-overflow: ellipsis;"> <%= Faker::Quote.famous_last_words %></p>
            </span>
            <p class="text-muted mb-0 ml-3" style="font-size: 16px;">View all <%= rand(1..100) %> comments</p>
            <p class="mb-0 ml-3" style="font-weight: 600; font-size: 16px;"><%= @users.sample.username %> üëè</p>
            <p class="text-muted mb-1 ml-3" style="font-size: 12px;"><%= distance_of_time_in_words_to_now(Time.now-rand(100000000)) %> ago</p>
          </div>
          <div class="d-flex w-100 border-top">
            <div class="row align-items-center flex-fill p-2">
              <div class="col-1 text-center">
                <i class="far fa-smile-beam"></i>
              </div>
              <div class="col-9 text-left">
                <p class="mb-0 text-muted">Add a comment...</p>
              </div>
              <div class="col-2 text-center">
                <button type="button" class="btn btn-link pr-2 disabled" style="font-size:12px;">Post</button>
              </div>
            </div>
          </div>
        </div>
      <%# end %>
    </div>
    <div class="col-md-4 my-5 sticky-top">
      <div class="d-flex flex-column align-items-stretch">
        <div class="d-flex">
          <div class="row w-100 align-items-center flex-fill">
            <div class="col-3 text-center">
              <%= cl_image_tag @james.avatar.key, width: 56, height: 56, crop: :thumb, gravity: :face, class:"avatar-large" %>
            </div>
            <div class="col-6 text-left">
              <div class="">
                <p class="mb-0" style="font-size:14px;"><%= @james.username %></p>
                <p class="text-muted mb-0" style="font-size:14px;"><%= @james.firstname %>  <%= @james.lastname %></p>
              </div>
            </div>
            <div class="col-3 pr-0 text-right">
              <button type="button" class="btn btn-link pr-2" style="font-size:12px;">Switch</button>
            </div>
          </div>
        </div>
        <div class="d-flex my-4 justify-content-between">
          <div class="row w-100 align-items-center flex-fill justify-content-between">
            <div class="col-9">
              <p class="text-muted mb-0" style="font-size:14px;">Suggestions For You</p>
            </div>
            <div class="col-3 pr-2 text-right">
              <button type="button" class="btn btn-link text-dark px-0" style="font-size:12px;">See All</button>
            </div>
          </div>
        </div>
        <div class="d-flex flex-column">
          <% 5.times do %>
          <div class="row w-100 justify-content-between align-items-center my-2">
            <div class="col-2 text-center">
              <%= cl_image_tag @users.sample.avatar.key, width: 40, height: 40, crop: :thumb, gravity: :face, class:"avatar" %>
            </div>
            <div class="col-8 text-left">
              <div class="">
                <p class="mb-0" style="font-size:14px;"><%= @james.username %></p>
                <p class="text-muted mb-0" style="font-size:12px; text-overflow: ellipsis;
                                                  white-space: nowrap; display: block; overflow: hidden;">
                                                  Followed by <%= @users.sample.username %> + <%= rand(1..10) %> more</p>
              </div>
            </div>
            <div class="col-2">
              <button type="button" class="btn btn-link" style="font-size:14px;">Follow</button>
            </div>
          </div>
          <% end %>
        </div>
        <nav class="d-flex flex-wrap mw-100 my-4">
          <p class="text-muted" style="font-size:12px;">About - Help - Press - API - Jobs - Privacy - Terms - Locations - Top Accounts - Hashtags - Language</p>
        </nav>
        <p class="text-muted text-uppercase" style="font-size:12px;"><i class="far fa-copyright"></i> 2021 Instagram From Facebook</p>
      </div>
    </div>
  </div>
</div>
